        <BoxView BackgroundColor="CadetBlue" Grid.Row="0"></BoxView>
        <BoxView BackgroundColor="RoyalBlue" Grid.Row="1"></BoxView>
        <BoxView BackgroundColor="Coral" Grid.Row="2"></BoxView>
        <BoxView BackgroundColor="Coral" Grid.Row="3"></BoxView>
        <BoxView BackgroundColor="Green" Grid.Row="4"></BoxView>

        
        <StackLayout Orientation="Vertical" Grid.Row="1">

            <Picker Title="Gender"/>

        </StackLayout>
        
        <StackLayout Orientation="Vertical" Grid.Row="2" HorizontalOptions="Center">
