<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileApps2Project"
             x:Class="MobileApps2Project.MainPage">


    <StackLayout BackgroundColor="#8BC34A">
        <Grid>
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>


            <StackLayout BackgroundColor="#E6FFC9" Grid.Column="0"></StackLayout>
            <StackLayout BackgroundColor="#E6FFC9" Grid.Column="2"></StackLayout>
            <!--Searchbar stack-->
            <StackLayout Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center" BackgroundColor="LightSeaGreen">
                <SearchBar x:Name="ingSearch" Placeholder="Enter Ingredient: " SearchButtonPressed="IngSearch_SearchButtonPressed"/>
                <Button Text="Click me" Clicked="Button_Clicked" />
            </StackLayout>

        </Grid>
           
        


    </StackLayout>

</ContentPage>
