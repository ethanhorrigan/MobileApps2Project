<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileApps2Project"
             x:Class="MobileApps2Project.MainPage">


    <StackLayout BackgroundColor="#8BC34A">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>


            <!--Input Stack stack-->
            <StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Center" BackgroundColor="LightSeaGreen" Margin="50, 0,0,0">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Age:" FontSize="Large" />
                    <Entry Placeholder="Age" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Weight (kg):" />
                    <Entry Placeholder="Weight" />
                </StackLayout>
            </StackLayout>

            <!--Searchbar stack-->
            <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" BackgroundColor="LightSeaGreen">
                <Button Text="Generate Plan" Clicked="Button_Clicked" />
            </StackLayout>

        </Grid>




    </StackLayout>

</ContentPage>
